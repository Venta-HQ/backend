{
	"$schema": "https://json.schemastore.org/nest-cli",
	"collection": "@nestjs/schematics",
	"sourceRoot": "apps/gateway/src",
	"compilerOptions": {
		"deleteOutDir": true,
		"webpack": true,
		"tsConfigPath": "apps/gateway/tsconfig.app.json"
	},
	"monorepo": true,
	"root": "apps/gateway",
	"projects": {
		"user": {
			"type": "application",
			"root": "apps/user",
			"entryFile": "src/main",
			"sourceRoot": "./",
			"compilerOptions": {
				"assets": ["libs/proto/src/definitions/user.proto"],
				"tsConfigPath": "apps/user/tsconfig.app.json"
			}
		},
		"gateway": {
			"type": "application",
			"root": "apps/gateway",
			"entryFile": "src/main",
			"sourceRoot": "./",
			"compilerOptions": {
				"assets": ["libs/proto/src/definitions/user.proto", "libs/proto/src/definitions/vendor.proto"],
				"tsConfigPath": "apps/gateway/tsconfig.app.json"
			}
		},
		"nest/modules": {
			"type": "library",
			"root": "libs/nest/modules/",
			"entryFile": "index",
			"sourceRoot": "libs/nest/modules/",
			"compilerOptions": {
				"tsConfigPath": "libs/nest/modules/tsconfig.lib.json"
			}
		},
		"nest/guards": {
			"type": "library",
			"root": "libs/nest/guards/",
			"entryFile": "index",
			"sourceRoot": "libs/nest/guards/",
			"compilerOptions": {
				"tsConfigPath": "libs/nest/guards/tsconfig.lib.json"
			}
		},
		"nest/pipes": {
			"type": "library",
			"root": "libs/nest/pipes/",
			"entryFile": "index",
			"sourceRoot": "libs/nest/pipes/",
			"compilerOptions": {
				"tsConfigPath": "libs/nest/pipes/tsconfig.lib.json"
			}
		},
		"nest/filters": {
			"type": "library",
			"root": "libs/nest/filters/",
			"entryFile": "index",
			"sourceRoot": "libs/nest/filters/",
			"compilerOptions": {
				"tsConfigPath": "libs/nest/filters/tsconfig.lib.json"
			}
		},
		"nest/errors": {
			"type": "library",
			"root": "libs/nest/errors/",
			"entryFile": "index",
			"sourceRoot": "libs/nest/errors/",
			"compilerOptions": {
				"tsConfigPath": "libs/nest/errors/tsconfig.lib.json"
			}
		},
		"proto": {
			"type": "library",
			"root": "libs/proto",
			"entryFile": "index",
			"sourceRoot": "libs/proto/src",
			"compilerOptions": {
				"tsConfigPath": "libs/proto/tsconfig.lib.json"
			}
		},
		"location": {
			"type": "application",
			"root": "apps/location",
			"entryFile": "src/main",
			"sourceRoot": "./",
			"compilerOptions": {
				"assets": ["libs/proto/src/definitions/location.proto"],
				"tsConfigPath": "apps/location/tsconfig.app.json"
			}
		},

		"websocket-gateway": {
			"type": "application",
			"root": "apps/websocket-gateway",
			"entryFile": "src/main",
			"sourceRoot": "./",
			"compilerOptions": {
				"assets": ["libs/proto/src/definitions/location.proto"],
				"tsConfigPath": "apps/websocket-gateway/tsconfig.app.json"
			}
		},
		"apitypes": {
			"type": "library",
			"root": "libs/apitypes",
			"entryFile": "index",
			"sourceRoot": "libs/apitypes/src",
			"compilerOptions": {
				"tsConfigPath": "libs/apitypes/tsconfig.lib.json"
			}
		},
		"vendor": {
			"type": "application",
			"root": "apps/vendor",
			"entryFile": "src/main",
			"sourceRoot": "./",
			"compilerOptions": {
				"assets": ["libs/proto/src/definitions/vendor.proto"],
				"tsConfigPath": "apps/vendor/tsconfig.app.json"
			}
		},
		"algolia-sync": {
			"type": "application",
			"root": "apps/algolia-sync",
			"entryFile": "src/main",
			"sourceRoot": "./",
			"compilerOptions": {
				"tsConfigPath": "apps/algolia-sync/tsconfig.app.json"
			}
		}
	}
}

{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"target": "ES2021",
		"sourceMap": true,
		"outDir": "./dist",
		"baseUrl": "./",
		"incremental": true,
		"skipLibCheck": true,
		"strictNullChecks": false,
		"noImplicitAny": false,
		"strictBindCallApply": false,
		"forceConsistentCasingInFileNames": false,
		"noFallthroughCasesInSwitch": false,
		"paths": {
			"@app/nest/*": ["libs/nest/*"],
			"@app/proto/*": ["libs/proto/src/lib/domains/*.ts"],
			"@app/eventtypes": ["libs/eventtypes/src"],
			"@app/eventtypes/*": ["libs/eventtypes/src/*"],
			"@app/utils": ["libs/utils/src"],
			"@domains/*": ["domains/*"],
			"@test/helpers": ["test/helpers"],
			"@test/helpers/*": ["test/helpers/*"]
		}
	}
}

	"scripts": {
		"build-proto": "protoc --plugin=protoc-gen-ts_proto=node_modules/.bin/protoc-gen-ts_proto --ts_proto_out=libs/proto/src/lib -I libs/proto/src/definitions --ts_proto_opt=nestJs=true --ts_proto_opt=useDate=true --ts_proto_opt=addGrpcMetadata=true index.proto",
		"prebuild": "npm run build-proto",
		"prestart": "npm run build-proto",
		"build": "nx run utils:build && nx run grpc:build && nx run auth:build && nx run database:build && nx run errors:build && nx run events:build && nx run logger:build && nx run proto:build && nx run redis:build && nx run search:build && nx run upload:build && nx run validation:build && nx run health:build && nx run apitypes:build && nx run config:build && nx run gateway:build && nx run user:build && nx run vendor:build && nx run location:build && nx run algolia-sync:build && nx run websocket-gateway:build",
		"format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
		"start": "nx serve gateway",
		"start:dev": "nx serve gateway --configuration=development",
		"start:debug": "nx serve gateway --configuration=development",
		"start:prod": "node dist/apps/gateway/main",
		"lint": "nx run-many --target=lint --all",
		"start:user": "nx serve user --configuration=development",
		"start:vendor": "nx serve vendor --configuration=development",
		"start:location": "nx serve location --configuration=development",
		"start:algolia-sync": "nx serve algolia-sync --configuration=development",
		"start:gateway": "nx serve gateway --configuration=development",
		"start:websocket-gateway": "nx serve websocket-gateway --configuration=development",
		"start:ngrok": "ngrok http --url=optimum-lemming-firm.ngrok-free.app 5002",
		"alert-done": "echo 'All Apps Are Ready!'",
		"prestart:all": "nx run-many --target=build --all",
		"start:all": "concurrently \"pnpm start:ngrok\" \"pnpm start:user\" \"pnpm start:vendor\" \"pnpm start:location\" \"pnpm start:algolia-sync\" \"pnpm start:gateway\" \"pnpm start:websocket-gateway\" \"wait-on tcp:5004 && pnpm alert-done\"",
		"test": "nx run-many --target=test --all",
		"test:watch": "nx run-many --target=test --all --watch",
		"test:ui": "vitest --ui",
		"test:coverage": "nx run-many --target=test --all --coverage",
		"test:run": "nx run-many --target=test --all",
		"test:libs": "nx run-many --target=test --projects=nest,proto,apitypes",
		"test:libs:watch": "nx run-many --target=test --projects=nest,proto,apitypes --watch",
		"test:service-discovery": "node scripts/test-service-discovery.js",
		"run:auth": "nx serve user --configuration=development",
		"run:algolia-sync": "nx serve algolia-sync --configuration=development",
		"run:gateway": "nx serve gateway --configuration=development",
		"run:location": "nx serve location --configuration=development",
		"run:websocket-gateway": "nx serve websocket-gateway --configuration=development",
		"run:all": "concurrently \"pnpm run run:auth\" \"pnpm run run:algolia-sync\" \"pnpm run run:gateway\" \"pnpm run run:location\" \"pnpm run run:websocket-gateway\"",
		"prisma:generate": "prisma generate"
	},

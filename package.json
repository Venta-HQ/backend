{
  "name": "backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build-proto": "protoc -I /usr/local/include --plugin=protoc-gen-ts_proto=node_modules/.bin/protoc-gen-ts_proto --ts_proto_out=libs/proto/src/lib -I libs/proto/src/definitions --ts_proto_opt=nestJs=true --ts_proto_opt=useDate=true --ts_proto_opt=addGrpcMetadata=true index.proto",
    "prebuild": "npm run build-proto",
    "prestart": "npm run build-proto",
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/backend/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "start:user": "nest start user --watch",
    "start:vendor": "wait-on tcp:5000 && nest start vendor --watch",
    "start:location": "wait-on tcp:5005 && nest start location --watch",
    "start:dbchange": "wait-on tcp:5001 && nest start dbchange --watch",
    "start:gateway": "wait-on tcp:5003 && nest start gateway --watch",
    "start:websocket-gateway": "wait-on tcp:5002 && nest start websocket-gateway --watch",
    "start:ngrok": "ngrok http --url=optimum-lemming-firm.ngrok-free.app 5002",
    "alert-done": "echo 'All Apps Are Ready!'",
    "prestart:all": "concurrently \"nest build user\" \"nest build vendor\" \"nest build location\" \"nest build dbchange\" \"nest build gateway\" \"nest build websocket-gateway\" \"pnpm alert-done\"",
    "start:all": "concurrently \"pnpm start:ngrok\" \"pnpm start:user\" \"pnpm start:vendor\" \"pnpm start:location\" \"pnpm start:dbchange\" \"pnpm start:gateway\" \"pnpm start:websocket-gateway\" \"wait-on tcp:5004 && pnpm alert-done\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/backend/test/jest-e2e.json",
    "run:auth": "nest start auth ---watch",
    "run:dbchange": "nest start dbchange ---watch",
    "run:gateway": "nest start gateway ---watch",
    "run:location": "nest start location ---watch",
    "run:websocket-gateway": "nest start websocket-gateway ---watch",
    "run:all": "concurrently \"pnpm run run:auth\" \"pnpm run run:dbchange\" \"pnpm run run:gateway\" \"pnpm run run:location\" \"pnpm run run:websocket-gateway\"",
    "prisma:generate": "prisma generate"
  },
  "dependencies": {
    "@clerk/backend": "^1.13.2",
    "@clerk/clerk-sdk-node": "^5.0.26",
    "@grpc/grpc-js": "^1.11.1",
    "@grpc/proto-loader": "^0.7.13",
    "@nestjs-modules/ioredis": "^2.0.2",
    "@nestjs/common": "^10.4.0",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.0.0",
    "@nestjs/microservices": "^10.4.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/platform-socket.io": "^10.4.1",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/websockets": "^10.4.1",
    "@prisma/client": "6.3.1",
    "@prisma/extension-pulse": "^1.2.0",
    "algoliasearch": "^5.0.0",
    "backend": "link:",
    "buffer-to-stream": "^1.0.0",
    "cloudinary": "^2.5.0",
    "connection-string": "^4.4.0",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "nats": "^2.29.3",
    "nestjs-pino": "^4.1.0",
    "pino-http": "^10.2.0",
    "pino-loki": "^2.3.0",
    "pino-pretty": "^11.2.2",
    "prisma": "^6.3.1",
    "protobufjs": "^7.4.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "socket.io": "^4.7.5",
    "svix": "^1.29.0",
    "ts-proto": "^1.181.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@clerk/types": "^4.21.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.3.1",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "concurrently": "^9.0.1",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-sort-destructure-keys": "^2.0.0",
    "eslint-plugin-sort-keys": "^2.3.5",
    "eslint-plugin-typescript-sort-keys": "^3.2.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3",
    "wait-on": "^8.0.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/nest/modules/redis(|/.*)$": "<rootDir>/libs/nest/modules/redis/src/$1",
      "^@app/nest/modules/logger(|/.*)$": "<rootDir>/libs/nest/modules/logger/src/$1",
      "^@app/nest/modules/events(|/.*)$": "<rootDir>/libs/nest/modules/events/$1",
      "^@app/nest/modules/health(|/.*)$": "<rootDir>/libs/nest/modules/health/$1",
      "^@app/nest/guards/signed-webhook(|/.*)$": "<rootDir>/libs/nest/guards/signed-webhook/src/$1",
      "^@app/proto(|/.*)$": "<rootDir>/libs/proto/src/$1",
      "^@app/nest/modules/algolia(|/.*)$": "<rootDir>/libs/nest/modules/algolia/src/$1",
      "^@app/apitypes(|/.*)$": "<rootDir>/libs/apitypes/src/$1"
    }
  }
}
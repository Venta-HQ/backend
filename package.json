{
	"name": "backend",
	"version": "0.0.1",
	"description": "",
	"author": "",
	"private": true,
	"license": "UNLICENSED",
	"scripts": {
		"build:proto": "protoc -I /usr/local/include --plugin=protoc-gen-ts_proto=node_modules/.bin/protoc-gen-ts_proto --ts_proto_out=libs/proto/src/lib -I libs/proto/src/definitions --ts_proto_opt=nestJs=true --ts_proto_opt=useDate=true --ts_proto_opt=addGrpcMetadata=true index.proto",
		"prebuild": "npm run build:proto",
		"build": "nest build",
		"format": "prettier --write \"domains/**/*.ts\" \"libs/**/*.ts\"",
		"lint": "eslint \"{src,domains,libs,test}/**/*.ts\" --fix",
		"typecheck": "tsc --noEmit",
		"test": "vitest",
		"test:run": "vitest run",
		"test:coverage": "vitest run --coverage",
		"test:ui": "vitest --ui",
		"prisma:generate": "prisma generate",
		"start:dev": "concurrently \"nest start gateway --watch\" \"nest start user --watch\" \"nest start vendor --watch\" \"nest start location --watch\" \"nest start websocket-gateway --watch\" \"nest start algolia-sync --watch\""
	},
	"dependencies": {
		"@clerk/clerk-sdk-node": "^5.0.26",
		"@grpc/grpc-js": "^1.11.1",
		"@grpc/proto-loader": "^0.7.13",

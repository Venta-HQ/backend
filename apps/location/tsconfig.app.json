{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"declaration": false,
		"outDir": "../../dist/apps/location",
		"baseUrl": ".",
		"paths": {
			"@app/nest/modules": ["../../libs/nest/modules"],
			"@app/nest/modules/*": ["../../libs/nest/modules/*"],
			"@app/nest/guards": ["../../libs/nest/guards"],
			"@app/nest/pipes": ["../../libs/nest/pipes"],
			"@app/nest/filters": ["../../libs/nest/filters"],
			"@app/nest/errors": ["../../libs/nest/errors"],
			"@app/proto/*": ["../../libs/proto/src/lib/*.ts"],
			"@app/apitypes": ["../../libs/apitypes/src"],
			"@app/apitypes/*": ["../../libs/apitypes/src/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "test", "**/*spec.ts"]
}

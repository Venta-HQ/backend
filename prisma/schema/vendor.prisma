model Vendor {
    id           String  @id @default(uuid())
    name         String
    description  String?
    phone        String?
    email        String?
    website      String?
    open         Boolean @default(false)
    primaryImage String?
    lat          Float?
    long         Float?

    // Relations
    ownerId String
    owner   User   @relation(fields: [ownerId], references: [id])

    // Metadata
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@map("vendor")
}

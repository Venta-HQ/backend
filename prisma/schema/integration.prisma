enum IntegrationType {
    RevenueCat
    Clerk
    Cloudinary
    Algolia
}

model Integration {
    id     String          @id @default(uuid())
    type   IntegrationType
    userId String
    user   User            @relation(fields: [userId], references: [id])
    config Json

    // Metadata
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@map("integration")
}

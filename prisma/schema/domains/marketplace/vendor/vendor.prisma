model Vendor {
    id  String @id @default(uuid())
    // These lat/lng values are used to show locations on the map without subscription to live location
    lat Float?
    lng Float?

    // General details
    name         String
    description  String?
    phone        String?
    email        String?
    website      String?
    isActive     Boolean @default(false)
    profileImage String?

    // Metadata
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    // Relations
    ownerId String
    owner   User   @relation(fields: [ownerId], references: [id])

    @@map("vendor")
}
